{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2018", "dom"],

    "declaration": true,

    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "preserveWatchOutput": true,
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
